<%= form_tag '/login', class: "form-inline my-2 my-lg-0 pull-right" do%>
    <%= label_tag :username, "Username", class: "mr-1" %>
    <%= text_field_tag :username %>

    <%= label_tag :password, "Password", class: "mr-1 ml-2" %>
    <%= password_field_tag :password %>

    <%= submit_tag "Log In", class: "ml-1 btn btn-primary" %>
<%end%>
