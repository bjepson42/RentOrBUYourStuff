<h1>Create New Listing</h1>


<%= render partial: "/shared/error_partial", locals: {object: @listing}%>


<%= form_for @listing do |f|%>
  <div class="form-row">
    <div class="form-group col-md-5">
        <%= f.label :product_name %>
        <%= f.text_field :product_name, class: "form-control"%>
    </div>
  </div>
    <div class="form-row">
    <div class="form-group col-md-3">
        <%= f.label :quality %>
        <%= f.text_field :quality, class: "form-control"%>
    </div>
    <div class="form-group col-md-1">
        <%= f.label :rental_price %>
        <%= f.number_field :rental_price, class: "form-control"%>
    </div>
    <div class="form-group col-md-1">
        <%= f.label :buy_price %>
        <%= f.number_field :buy_price, class: "form-control"%>
    </div>
    <div class="form-group col-md-2">
        <%= f.label :item_value, "Replacement Price" %>
        <%= f.text_field :item_value, class: "form-control"%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group">
        <%= f.label :product_description %>
        <%= f.text_area :product_description, class: "form-control", cols: 70%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
       <%= f.label :address %>
        <%= f.text_field :address, class: "form-control"%>
    </div>
    <div class="form-group col-md-2">
      <%= f.label :zip_code %>
        <%= f.number_field :zip_code, class: "form-control"%>
    </div>
 </div>
 <div class="form-row">
    <div class="form-group">
        <%= f.hidden_field :owner_id, :value => current_user.id %>
        <%= f.submit "Submit Listing"%>
    </div>
 </div>
    
<% end %>


   

    

  

 



   

    

   

  
